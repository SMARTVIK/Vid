<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/gif_image"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/gif_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:padding="10dp"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="#e5e5e5" />

        <LinearLayout
            android:id="@+id/sharing_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="5dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:id="@+id/send_to_facebook"
                    android:layout_width="@dimen/height_width_gif"
                    android:layout_height="@dimen/height_width_gif"
                    android:layout_gravity="center"
                    android:background="#00000000"
                    android:src="@drawable/messenger" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:id="@+id/send_to_instagram"
                    android:layout_width="@dimen/height_width_gif"
                    android:layout_height="@dimen/height_width_gif"
                    android:layout_gravity="center"
                    android:background="#00000000"
                    android:src="@drawable/insta" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:id="@+id/send_to_whatsapp"
                    android:layout_width="@dimen/height_width_gif"
                    android:layout_height="@dimen/height_width_gif"
                    android:layout_gravity="center"
                    android:background="#00000000"
                    android:src="@drawable/whatsapp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:id="@+id/share"
                    android:layout_width="@dimen/height_width_gif"
                    android:layout_height="@dimen/height_width_gif"
                    android:layout_gravity="center"
                    android:background="#00000000"
                    android:src="@drawable/share" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>